<div id="signup" class="col-md-3 center-block">
	<%= form_for(@user) do |f| %>
		<div class="form-group">
			<%= f.text_field :name, class: 'form-control', placeholder: 'Username' %>
		</div>

		<div class="form-group">
			<%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
		</div>

		<div class="form-group">
			<%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
		</div>

		<div class="form-group">
			<%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password, please' %>
		</div>

		<%= f.submit "Inscrivez-vous !" %>
	<% end %>
</div>
