<div id="signup" class="col-md-3 center-block">
	<%= form_for(@user) do |f| %>

		<%= render 'error_messages' %>

		<div class="field form-group">
			<%= f.text_field :name, class: 'form-control', placeholder: 'Username' %>
		</div>

		<div class="field form-group">
			<%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
		</div>

		<div class="field form-group">
			<%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
		</div>

		<div class="field form-group">
			<%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password, please' %>
		</div>

		<div class="actions form-group">
			<%= f.submit "Inscrivez-vous !", class: "btn btn-default" %>
		</div>
	<% end %>
</div>
