<div id="signup" class="col-md-2 center-block">
	<%= form_for(:session, :url => sessions_path) do |f| %>
		<div class="field form-group">
			<%= f.text_field :email_or_username, class: 'form-control', placeholder: 'Username or Email' %>
		</div>
		<div class="field form-group">
			<%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
		</div>
		<div class="actions form-group">
			<%= f.submit "Sign in" %>
		</div>
	<% end %>
</div>

<p>Pas encore inscrit ? <%= link_to "Sign up", signup_path %></p>
